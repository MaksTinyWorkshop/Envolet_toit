---
import SiteFooter from "@components/UI/SiteFooter.astro";
import Navbar from "@components/UI/Navbar/Navbar.astro";
import CallbackModal from "@components/CTA/CallbackModal.astro";
export interface NavigationLink {
  label: string;
  href: string;
}

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Une vitrine moderne et rapide construite avec Astro.",
} = Astro.props as Props;
---

<!doctype html>
<html lang="fr" data-theme="mindleaf">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
    <SiteFooter />
    <CallbackModal />
  </body>
</html>

<style lang="scss" is:global>
  @use "webcoreui/styles" as *;
  @include setup(
    (
      fontRegular: "/fonts/Montserrat.ttf",
      fontBold: "/fonts/Vintera.ttf",
      theme: "light",
    )
  );

  html,
  body {
    min-height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(fontBold), serif;
    text-align: center;
  }
</style>
