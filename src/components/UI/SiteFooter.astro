---
const year = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__info">
      <p class="footer__brand">Envolet'toit – SAV VELUX</p>
      <p class="footer__details">1 rue du Volet, 35000 RENNES</p>
      <p class="footer__details">02 98 66 09 67</p>
    </div>
    <div class="footer__badge" aria-hidden="true">
      <img src="/images/veluxXpert.svg" alt="Velux Expert" loading="lazy" />
    </div>
  </div>
  <p class="footer__copyright">
    © {year} Envolet'toit.
    <span>
      <a class="footer__link" href="/mentions-legales">Mentions légales</a>
    </span>
  </p>
</footer>

<style lang="scss">
  .footer {
    background: var(--color-text);
    color: var(--color-nav);
    padding: var(--space-3) var(--space-2);
    display: flex;

    align-items: center;
    gap: var(--space-2);
    text-align: center;
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .footer__info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    font-size: var(--step--1);
    letter-spacing: 0.02em;
  }

  .footer__brand {
    margin: 0;
    font-family: var(fontBold) !important;
    font-size: var(--step-1);
  }

  .footer__details {
    margin: 0;
    color: var(--color-muted);
  }

  .footer__badge {
    display: flex;
    align-items: center;

    img {
      width: clamp(88px, 18vw, 120px);
      height: auto;
      display: block;
    }
  }

  .footer__copyright {
    margin: 0;
    font-size: var(--step--2);
    opacity: 0.7;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .footer__link {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-size: var(--step--2);

    &:hover {
      text-decoration: underline;
    }
  }

  @media (min-width: 640px) {
    .footer {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }

    .footer__inner {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: var(--space-3);
    }

    .footer__copyright {
      align-items: flex-end;
      text-align: right;
    }
  }
</style>
