---
import type { NavigationLink } from "@layouts/BaseLayout.astro";

interface Props {
  navigation: NavigationLink[];
}

const { navigation } = Astro.props as Props;
---

<header class="wrapper">
  <div class="container">
    <a class="identity" href="/" aria-label="Retour Ã  l'accueil">
      <ion-chip class="badge" color="tertiary" outline>Template Astro</ion-chip>
      <span class="brand">Vitrine Moderne</span>
    </a>
    <nav class="primary-nav" aria-label="Navigation principale">
      <ul>
        {
          navigation.map((item) => (
            <li>
              <a href={item.href}>{item.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  header.wrapper {
    position: sticky;
    top: 0;
    z-index: 70;
    backdrop-filter: blur(18px);
    background: rgba(255, 255, 255, 0.96);
    border-bottom: 1px solid rgba(45, 55, 95, 0.08);
  }

  .container {
    width: min(1100px, calc(100% - 2.5rem));
    margin: 0 auto;
    padding: 0.85rem 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem 2rem;
  }

  .identity {
    display: inline-flex;
    align-items: center;
    gap: 0.85rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
  }

  .badge {
    --ion-color-base: rgba(59, 91, 253, 0.16);
    --ion-color-base-rgb: 59, 91, 253;
    --ion-color-contrast: var(--color-primary);
    --ion-color-contrast-rgb: 59, 91, 253;
    --ion-color-shade: rgba(59, 91, 253, 0.16);
    --ion-color-tint: rgba(59, 91, 253, 0.2);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
    font-weight: 700;
  }

  .primary-nav {
    margin-left: auto;
  }

  .primary-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .primary-nav a {
    color: var(--color-muted);
    font-weight: 600;
  }

  .primary-nav a:hover,
  .primary-nav a:focus-visible {
    color: var(--color-primary);
  }

  @media (max-width: 720px) {
    header.wrapper {
      position: static;
    }

    .container {
      width: calc(100% - 2rem);
      padding: 1rem 0;
      flex-direction: column;
      align-items: flex-start;
    }

    .primary-nav {
      width: 100%;
    }

    .primary-nav ul {
      width: 100%;
      flex-direction: column;
      gap: 0.85rem;
    }

    .primary-nav a {
      font-size: 1.05rem;
      color: var(--color-text);
    }
  }
</style>
