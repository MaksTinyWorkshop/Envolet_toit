---
interface Question {
  question: string;
  answer: string;
  role?: string;
}

interface Props {
  title: string;
  description?: string;
  questions: Question[];
}

const { title, description, questions } = Astro.props as Props;
import { Accordion } from "webcoreui/astro";
import Spacer from "./UI/Spacer.astro";
---

<section class="section-container questions">
  <div class="intro">
    <h2>{title}</h2>
    {description && <p>{description}</p>}
  </div>
  <Accordion
    items={questions.map(({ question, answer, role }) => ({
      title: question,
      content: answer,
    }))}
    className="faq-accordion"
  />

  <Spacer size="2rem" />
</section>

<style>
  .intro {
    max-width: 640px;
    margin: 0 auto 2.5rem;
    text-align: center;
  }

  .intro h2 {
    font-size: clamp(2rem, 4vw, 2.75rem);
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .intro p {
    color: var(--color-muted);
  }

  .faq-accordion {
    max-width: 90vw;
    margin: 0 auto;

    button {
      font-family: var(fontBold);
      font-size: clamp(0.5rem, 2vw, 1.125rem);
      font-weight: 600;
    }

    li {
      font-family: var(fontRegular);
      font-size: clamp(1rem, 2vw, 1.125rem);
    }
  }
</style>
